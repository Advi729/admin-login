<section>
    <div class="container">
        <h3>All Users</h3>
        <table class="table my-5" id="userTable">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Age</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each user}}
                <tr class="m-auto">
                    <td>{{this.Name}}</td>
                    <td>{{this.Email}}</td>
                    <td>{{this.Age}}</td>
                    <td>
                        <a href="/admin/edit-users/{{_id}}" class="btn btn-outline-primary btn-rounded">Edit</a>
                        <a href="/admin/delete-users/{{_id}}" class="btn btn-outline-danger btn-rounded"
                            onclick="return confirm('Want to delete {{this.Name}} ??')">Delete</a>
                    </td>
                </tr>
                {{/each}} 
            </tbody>
        </table>
    </div>
</section>

