<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">NO.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Description}}</td>
                    <td><img src="/images/product-images/{{this._id}}.jpg" style="width:50px;height:50px;" alt=""></td>
                </tr>
                {{/each}}
            </tbody> 
        </table>
    </div>
</section>